# ===========================
# 1) Builder
# ===========================
FROM golang:1.25-alpine AS builder

WORKDIR /app
RUN apk add --no-cache git

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -o signaling .

# ===========================
# 2) Runner
# ===========================
FROM alpine:3.20

WORKDIR /app
RUN apk add --no-cache ca-certificates

COPY --from=builder /app/signaling ./signaling

EXPOSE 8080
CMD ["./signaling"]